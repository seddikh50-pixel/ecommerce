generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
 
}

model Banner {
  id    String @id @default(uuid())
  image String
}

model Product {
  id              String   @id @default(uuid())
  name            String   @unique
  images          String[]
  price           String
  description     String
  categoryId      String
  category        Category @relation(fields: [categoryId], references: [id])
  brandId         String
  brand           Brand    @relation(fields: [brandId], references: [id])
  isStocked       Boolean  @default(true)
  stripeProductId String?
  stripePriceId   String?
}

model Category {
  id       String    @id @default(uuid())
  name     String
  image    String
  products Product[]
}

model Brand {
  id       String    @id @default(uuid())
  name     String
  image    String
  products Product[]
}

model Blog {
  id        String   @id @default(uuid())
  image     String
  title     String // عنوان البلوق
  content   String // النص الكبير (المقال)
  createdAt DateTime @default(now())
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  picture   String?
  createdAt DateTime @default(now())
  cart      Json?
  orders    Order[] // علاقة one-to-many مع الطلبات
}

model Order {
  id              String   @id @default(uuid())
  fullName        String
  stripeSessionId String   @unique
  email           String
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  amount          Int
  status          String
  items           Json // هنا نخزن المنتجات
  createdAt       DateTime @default(now())
}
